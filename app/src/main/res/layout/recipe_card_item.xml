<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/app_padding">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_item_radius"
        app:cardBackgroundColor="@color/colorPrimaryLight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/app_padding">
            <ImageView
                android:id="@+id/recipe_item_iv"
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:src="@drawable/ic_cake_black_48dp"/>
            <TextView
                android:id="@+id/recipe_item_tv"
                style="@style/list_item_text_style"
                tools:text="Burger"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>